<%= @sudoers_firewall %>

<%= @sudoers_username %> ALL = (root) NOPASSWD: /usr/bin/nice ^-n -20 -- \
    /usr/bin/sudo -nu <%= @sudoers_username %> -- /private/var/sshuttle/sshuttle/run \
    @/private/var/sshuttle/\.config/sshuttle\.conf (-v ?){0,2}$

User_Alias CATHY_UID = #<%= @facts['cathy_uid'] %>
CATHY_UID ALL = (<%= @sudoers_username %>) CWD=~<%= @sudoers_username %> NOPASSWD: /var/sshuttle/connect.sh \
    ^(-s [0-9]{0,5}\.?[0-9]{0,5} ?)?(-v ?){0,2}(-x)?$